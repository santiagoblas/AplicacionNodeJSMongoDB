<h1>Tus Notas</h1>
<div class="row">
    {{#if notes.length}}
        <div class="card-columns">
            {{#each notes}}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            {{title}}
                            <div class="btn-group">
                                {{#if public}} <span class="text-info btn btn-sm"><i class="fa fa-globe-americas"></i></span> {{/if}}
                                <a href="/notes/edit/{{_id}}" class="btn btn-sm"><i class="fa fa-edit"></i></a>
                            </div>
                            
                        </h5>
                        <p>{{description}}</p>
                        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            
                            <button class="btn btn-danger btn-block btn-sm" type="submit">Borrar</button>
                        </form>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h2>Hola {{user.name}}</h2>
                <p class="lead">Todavía no has agregado notas.</p>
                <a href="/notes/add" class="btn btn-success btn-block">Crea una</a>
            </div>
        </div>
    {{/if}}
</div>
<div class="row mt-5">
    <div class="col-12 border-bottom mb-2"><h4><i class="fa fa-globe-americas"></i> Notas Públicas</h4></div>
    {{#if publicNotes.length}}
        <div class="card-columns">
            {{#each publicNotes}}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            {{title}}
                        </h5>
                        <p>{{description}}</p>
                        <blockquote><footer class="blockquote-footer">{{user.name}}</footer></blockquote>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="col-sm-12">
            <div class="alert alert-danger alert-dismissible fade show block" role="alert">
                Todavía no se han subido notas públicas
                <button class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        
    {{/if}}
</div>