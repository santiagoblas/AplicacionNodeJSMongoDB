<div class="col-lg-4 col-md-6 col-sm-8 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nota Nueva</h3>
        </div>
        <div class="card-body">
            <form action="/notes/add" method="POST">
                <div class="form-group">
                    <input type="text" name="title" id="title" class="form-control" placeholder="Título" autofocus value="{{title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" id="description" class="form-control">{{description}}</textarea>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="public" id="public" value="true">
                    <label for="public" class="form-check-label">Nota Pública</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block mt-2">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>